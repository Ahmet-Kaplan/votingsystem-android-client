<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_vs" />

    <ScrollView android:id="@+id/scroller"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >
                <fragment android:name="org.votingsystem.android.fragment.EditorFragment"
                    android:id="@+id/editor"
                    android:tag="EditorFragment"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" />
            </RelativeLayout>
            <View android:layout_width="fill_parent"
                android:layout_marginTop="15dp"
                android:layout_height="0.2dp"
                android:id="@+id/separator"
                android:visibility="visible"
                android:background="@android:color/darker_gray"/>
            <TextView  android:id="@+id/representative_image_caption"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/event_subject"
                android:text ="@string/select_representative_image_lbl"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"/>
            <LinearLayout android:id="@+id/imageContainer" android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/representative_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/representative_image_path"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:layout_weight="1.0"
                    android:gravity="center"/>
            </LinearLayout>
            <View android:layout_width="fill_parent"
                android:layout_marginTop="15dp"
                android:layout_height="0.2dp"
                android:layout_marginBottom="50dp"
                android:id="@+id/separator1"
                android:visibility="visible"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
